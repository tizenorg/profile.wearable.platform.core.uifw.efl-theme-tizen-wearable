group { name: "elm/notify/bottom/popup";
   parts {
      part { name: "base";
         type: RECT;
         scale: 1;
         description { state: "default" 0.0;
            color: 0 0 0 0;
            rel1.relative: 0.0 0.0;
            rel2.relative: 1.0 1.0;
         }
      }
      part { name: "elm.swallow.content";
         type: SWALLOW;
         scale: 1;
         repeat_events: 1;
         description { state: "default" 0.0;
            rel1.to: "base";
            rel2.to: "base";
            align: 0.5 0.0;
            visible: 0;
         }
         description { state: "start" 0.0;
            inherit: "default" 0.0;
            rel1 {
               to: "base";
               relative: 0.0 1.0;
            }
            rel2 {
               to: "base";
               relative: 1.0 2.0;
            }
         }
         description { state: "end" 0.0;
            inherit: "default" 0.0;
            visible: 1;
         }
      }
      part { name: "block";
         scale: 1;
         type: RECT;
         description { state: "default" 0.0;
            rel1.to: "elm.swallow.content";
            rel2.to: "elm.swallow.content";
            visible: 0;
            color: 0 0 0 0;
         }
         description { state: "end" 0.0;
            inherit: "default" 0.0;
            visible: 0;
         }
      }
   }
   programs {
      program { name: "effect";
         signal: "show";
         action: STATE_SET "start" 0.0;
         target: "elm.swallow.content";
         after: "effect_go";
      }
      program { name: "effect_go";
         action: STATE_SET "end" 0.0;
         transition: CUBIC_BEZIER POPUP_SHOW_VI_DURATION 0.25 0.46 0.45 1.0;
         target: "elm.swallow.content";
         target: "block";
         after: "effect_done";
      }
      program { name: "effect_done";
         in: POPUP_ACTION_BUTTON_VI_DURATION 0.0;
         action: SIGNAL_EMIT "elm,action,show,finished" "";
      }
      program { name: "hide_effect";
         signal: "elm,state,hide";
         source: "elm";
         action: STATE_SET "end" 0.0;
         in: POPUP_ACTION_BUTTON_VI_DURATION 0.0;
         target: "elm.swallow.content";
         after: "hide_effect_go";
      }
      program { name: "hide_effect_go";
         action: STATE_SET "start" 0.0;
         target: "elm.swallow.content";
         transition: CUBIC_BEZIER POPUP_HIDE_VI_DURATION 0.45 0.03 0.41 1.0;
         after: "hide_effect_done";
      }
      program { name: "hide_effect_done";
         action: SIGNAL_EMIT "elm,state,hide,finished" "elm";
      }
   }
}

group { name: "elm/notify/bottom/toast/circle";
   parts {
      part { name: "base";
         mouse_events: 0;
         type: RECT;
         scale: 1;
         description { state: "default" 0.0;
            color: 0 0 0 0;
            rel1.relative: 0.0 0.0;
            rel2.relative: 1.0 1.0;
         }
      }
      part { name: "elm.swallow.content";
         type: SWALLOW;
         scale: 1;
         description { state: "default" 0.0;
            rel1.to: "base";
            rel2.to: "base";
            visible: 0;
         }
         description { state: "start" 0.0;
            rel1 {
               to: "base";
               relative: 0.0 1.0;
            }
            rel2.to: "base";
            align: 0.5 0.0;
            fixed: 0 1;
         }
         description { state: "end" 0.0;
            inherit: "default" 0.0;
            align: 0.5 1.0;
            visible: 1;
         }
      }
      part { name: "block";
         scale: 1;
         type: RECT;
         description { state: "default" 0.0;
            rel1.to: "elm.swallow.content";
            rel2.to: "elm.swallow.content";
            visible: 1;
            color: 0 0 0 0;
         }
         description { state: "end" 0.0;
            inherit: "default" 0.0;
            visible: 0;
         }
      }
   }
   programs {
      program { name: "show_1";
         signal: "show";
         action: STATE_SET "start" 0.0;
         target: "elm.swallow.content";
         after: "show_2";
      }
      program { name: "show_2";
         action: STATE_SET "end" 0.0;
         transition: CUBIC_BEZIER 0.3 0.45 0.03 0.41 1.0;
         target: "block";
         target: "elm.swallow.content";
         after: "showfinished";
      }
      program { name: "showfinished";
         action: SIGNAL_EMIT "elm,action,show,finished" "";
      }
      program { name: "hide";
         signal: "elm,state,hide";
         source: "elm";
         action: STATE_SET "start" 0.0;
         transition: CUBIC_BEZIER 0.3 0.45 0.03 0.41 1.0;
         target: "elm.swallow.content";
         after: "hide_effect_done";
      }
      program { name: "hide_effect_done";
         action: SIGNAL_EMIT "elm,state,hide,finished" "elm";
      }
   }
}

group { name: "elm/notify/block_events/popup";
   parts {
      part { name: "block_events_color";
         type: RECT;
         scale: 1;
         description { state: "default" 0.0;
            color: 0 0 0 0;
         }
         description { state: "show" 0.0;
            color: 7 7 7 178;
         }
         description { state: "clicked" 0.0;
            color: 0 0 0 0;
         }
      }
   }
   programs {
      program { name: "show";
         signal: "elm,action,show";
         source: "elm";
         action: STATE_SET "default" 0.0;
         target: "block_events_color";
       }
      program { name: "show1";
         signal: "show";
         action: STATE_SET "show" 0.0;
         transition: CUBIC_BEZIER POPUP_SHOW_VI_DURATION 0.33 0.0 0.3 1.0;
         target: "block_events_color";
      }
      program { name: "fade_out";
         signal: "elm,state,hide";
         source: "elm";
         action: STATE_SET "default" 0.0;
         transition: CUBIC_BEZIER POPUP_HIDE_VI_DURATION 0.33 0.0 0.3 1.0;
